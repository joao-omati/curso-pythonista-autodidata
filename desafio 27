+import os

frutas = ["laranja" , "uva" , "pera" , "tomate" , "banana"]
cores = ["vede", "vermelho", "branco", "preto", "azul"]

frutas = ["laranja", "uva", "pera", "tomate", "banana"]
with open("frutas.txt","a",newline = "") as arquivo:
    for fruta in frutas:
        arquivo.write(fruta + os.linesep)

with open("frutas.txt","a",newline = "") as arquivo:
    for cor in cores:
        arquivo.write(os.linesep + cor)
